<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_blue_light"
    tools:context=".PassengerTwo" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="17dp"
            android:background="#fff"
            android:onClick="contact"
            android:padding="5dp"
            android:text="Contact"
            android:textColor="#000" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/button1"
            android:layout_marginRight="38dp"
            android:background="#fff"
            android:onClick="chat"
            android:padding="5dp"
            android:text="Chat"
            android:textColor="#000" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_alignRight="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:background="#fff"
            android:onClick="seatsshow"
            android:padding="5dp"
            android:text="Seats"
            android:textColor="#000" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="#fff"
            android:onClick="joinuser"
            android:padding="5dp"
            android:text="Join"
            android:textColor="#000" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/TextView02"
            android:layout_marginTop="14dp"
            android:text="Details"
            android:textColor="#fff"
            android:textSize="@dimen/textSizeLarge" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView01"
            android:layout_below="@+id/button1"
            android:layout_marginTop="21dp"
            android:text="Details"
            android:textColor="#fff"
            android:textSize="@dimen/textSizeLarge" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView01"
            android:layout_below="@+id/TextView01"
            android:layout_marginTop="17dp"
            android:text="Details"
            android:textColor="#fff"
            android:textSize="@dimen/textSizeLarge" />

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView03"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="No notes"
            android:textColor="#fff"
            android:textSize="@dimen/textSizeLarge" />

        <TextView
            android:id="@+id/TextView05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView04"
            android:layout_below="@+id/TextView04"
            android:layout_marginTop="17dp"
            android:text="Details"
            android:textColor="#fff"
            android:textSize="@dimen/textSizeLarge" />

        <TextView
            android:id="@+id/TextView06"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView05"
            android:layout_below="@+id/TextView05"
            android:layout_marginTop="17dp"
            android:text="Details"
            android:textColor="#fff"
            android:textSize="@dimen/textSizeLarge" />

        <TextView
            android:id="@+id/TextView07"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView06"
            android:layout_below="@+id/TextView06"
            android:layout_marginTop="19dp"
            android:text="Details"
            android:textColor="#fff"
            android:textSize="@dimen/textSizeLarge" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button5"
            android:layout_below="@+id/TextView07"
            android:layout_marginTop="72dp"
            android:text="Details"
            android:textColor="#fff"
            android:textSize="@dimen/textSizeLarge" />

        <TextView
            android:id="@+id/TextView08"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView07"
            android:layout_below="@+id/TextView07"
            android:layout_marginTop="22dp"
            android:text="Details"
            android:textColor="#fff"
            android:textSize="@dimen/textSizeLarge" />
    </RelativeLayout>

</ScrollView>